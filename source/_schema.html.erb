<% category = current_page.data.recipeCategory %>
<% data.send(category).chapter.recipes.each do |recipe| %>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org/",
      "@type": "Recipe",
      "name": "<%= recipe.title %>",
      "url": "<%= url_for("/#{current_page.data.recipeCategory}/##{recipe.title.parameterize}") %>",
      "image": <%= schema_images(recipe) %>,
      "author": {
          "@type": "Person",
          "name": "<%= recipe.author %>"
        },
      "datePublished": "2020-04-20",
      "recipeIngredient": <%= recipe.ingredients.first.list %>,
      "recipeInstructions": [
          {
            "@type": "HowToStep",
            "name": "Directions",
            "text": "<%= recipe.instructions.join("\n") %>"
          }
        ],
      "recipeCategory": "<%= current_page.data.recipeCategory %>",
      "recipeCuisine": "<%= current_page.data.recipeCuisine %>"
    }
  </script>
<% end %>
